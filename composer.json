{
    "type": "project",
    "license": "proprietary",
    "repositories": [
        {
            "type": "path",
            "url": "../framework"
        }
    ],
    "require": {
        "php": "^7.2.5",
        "lium/framework": "dev-master",
        "nyholm/psr7": "^1.1",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "symfony/dotenv": "^4.4"
    },
    "require-dev": {
        "symfony/error-handler": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
}
